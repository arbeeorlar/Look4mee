<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".Fragment.PostJob_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:text="Choose Required Skill" />

            <EditText
                android:id="@+id/post_jobs_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/four_corner"
                android:layout_below="@+id/homeaddress_txt"
                android:drawableRight="@mipmap/triangle"
                android:hint="skill name"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:focusable="false" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:text="Job Description" />

                <!--<EditText-->
                    <!--android:id="@+id/post_job_desc"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:inputType="textMultiLine"-->
                    <!--android:gravity="start"-->
                    <!--android:ems="10"-->
                    <!--android:imeOptions="actionDone"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:textSize="15dp"-->
                    <!--android:padding="10dp"-->
                    <!--android:paddingLeft="5dp"-->
                    <!--android:background="@drawable/four_corner"-->
                    <!--android:layout_marginBottom="15dp"/>-->

                <devsp.look4mee.Customs.PostEditText
                    android:id="@+id/post_job_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/four_corner"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:layout_marginTop="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="@color/White"
            android:background="@drawable/button"/>





    </LinearLayout>



</ScrollView>
